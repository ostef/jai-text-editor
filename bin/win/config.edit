key_move_up UP
key_move_down DOWN
key_move_left LEFT
key_move_right RIGHT
key_select_up SHIFT+UP
key_select_down SHIFT+DOWN
key_select_left SHIFT+LEFT
key_select_right SHIFT+RIGHT
key_skip_left CTRL+LEFT
key_skip_right CTRL+RIGHT
key_select_skip_left CTRL+SHIFT+LEFT
key_select_skip_right CTRL+SHIFT+RIGHT
key_move_line_up ALT+UP
key_move_line_down ALT+DOWN
key_scroll_up CTRL+UP
key_scroll_down CTRL+DOWN
key_select_all CTRL+A
